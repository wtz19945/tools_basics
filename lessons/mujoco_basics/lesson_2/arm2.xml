<mujoco model="arm">
    <compiler inertiafromgeom="true"/>

    <default>
        <joint armature="0.001" damping="0.001"/>
        <geom contype="0" conaffinity="0" friction="1 0.1 0.1"/>
    </default>

    <!-- Arm Model: -->
    <worldbody>
        <geom name="base" type="cylinder" size="0.5 0.01" pos="0 0 0" quat="1 0 0 0" rgba="0.3 0 1 1"/>
        <body name="link_1" pos="0 0 0">
            <joint name="base_joint" type="hinge" axis="0 0 1"/>
            <geom name="base_joint_geom" type="cylinder" size="0.101 0.101" pos="0 0 0" quat="1 1 0 0" rgba="1 0 0 1"/>
            <joint name="link_1_joint" type="hinge" axis="0 1 0"/>
            <geom name="link_1_geom" type="box" size="0.1 0.1 1" pos="0 0 1" quat="1 0 0 0" rgba="0.3 0 1 1"/>
            <geom name="link_1_joint_geom" type="cylinder" size="0.101 0.101" pos="0 0 2" quat="1 1 0 0" rgba="1 0 0 1"/>
            <body name="link_2" pos="0 0 2">
                <joint name="link_2_joint" type="hinge" axis="0 1 0"/>
                <geom name="link_2_geom" type="box" size="0.1 0.1 1" pos="0 0 1" quat="1 0 0 0" rgba="0.3 0 1 1"/>
                <site name="end_effector" pos="0 0 2" size="0.101 0.101" quat="1 1 0 0" type="cylinder" rgba="1 0 0 1"/>
            </body>
        </body> 
    </worldbody>

    <actuator>
        <motor name="base_motor" joint="base_joint"/>
        <motor name="link_1_motor" joint="link_1_joint"/>
        <motor name="link_2_motor" joint="link_2_joint"/>
    </actuator>

</mujoco>